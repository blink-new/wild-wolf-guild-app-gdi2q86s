# Flask Configuration
SECRET_KEY=wild-wolf-guild-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=mysql+pymysql://username:password@localhost/wild_wolf_guild

# Discord OAuth2 Configuration
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=http://localhost:3000/auth/discord/callback
DISCORD_GUILD_ID=your_guild_id
DISCORD_BOT_TOKEN=your_bot_token

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Guild Configuration
GUILD_NAME=Wild Wolf Guild
GUILD_REGION=EU
GUILD_WEBSITE=https://wildwolfguild.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3000/admin

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# BDO API Configuration (if available)
BDO_API_KEY=your_bdo_api_key
BDO_API_URL=https://api.blackdesertonline.com

# Webhook URLs (for Discord notifications)
DISCORD_WEBHOOK_GENERAL=https://discord.com/api/webhooks/xxx/xxx
DISCORD_WEBHOOK_EVENTS=https://discord.com/api/webhooks/xxx/xxx
DISCORD_WEBHOOK_ADMIN=https://discord.com/api/webhooks/xxx/xxx

# Additional Security Settings
BCRYPT_LOG_ROUNDS=12
PASSWORD_RESET_TIMEOUT=3600
EMAIL_VERIFICATION_TIMEOUT=86400